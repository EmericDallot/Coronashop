<UserControl x:Class="CoronaShop.usercontrols.PopUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoronaShop.usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <ScrollViewer  VerticalScrollBarVisibility="Auto" Height="100" Margin="5,10">
                <TextBlock x:Name="DescriptionTextBlock" Text="" FontSize="26" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
            </ScrollViewer>
            <Button x:Name="ValidButton"  Content=""  Background="DodgerBlue" Foreground="White" Style="{StaticResource BouttonRond}" Width="130" FontSize="18" HorizontalAlignment="Center" Click="ValidButton_Click"></Button>
        </StackPanel>
    </Grid>
</UserControl>
